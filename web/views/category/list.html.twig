{% extends 'ag_base/backend.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <!-- page script -->
    <script type="text/javascript">
        $(function() {
            var langauages = {
                "en-US": "English",
                "zh-CN": "Chinese"
            };
            $("#category_list").dataTable({
                language: {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/"+langauages[navigator.language]+".json"
                },
                searchDelay: 1000,
				serverSide: true,
				ajax: {
				    "url": "category/list",
                    "type": "POST"
				},
				columns: [
					{% for table_column in table_columns %}
					{ "data": "{{ table_column }}"},
                    {% endfor %}
					{
						"orderable": false,
						"data": null,
						"defaultContent": null,
					}
				],
				rowCallback: function( row, data ) {
					var actions = '<a href="category/edit/' + data.{{primary_key}} + '" class="btn btn-primary btn-xs"><i class="fa fa-edit fa-lg"></i></a> <a href="category/delete/' + data.{{primary_key}} + '" onclick="return confirm_delete();" class="btn btn-danger btn-xs"><i class="fa fa-trash-o fa-lg"></i></a>';
					$('td:eq({{ table_columns|length }})', row).html( actions );
				}
			});
        });

        function confirm_delete(){
            if(!confirm("Are you sure? This action cannot be undone.")) { 
                return false;
            }
        }

    </script>
{% endblock %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'category_list'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% include 'ag_alerts.html.twig' %}

                        <div class="box">
                            <div class="box-header">
                                
                            </div><!-- /.box-header -->

                            <div class="box-body table-responsive">
                                <a class="btn btn-primary" href="{{ path('category_create') }}">&#43;</a>
<!--
<a class="btn btn-primary" href="{{ path('category_downloadList') }}"><i class="fa fa-download fa-lg"></i></a>
-->
                                <br /><br />
                                <table id="category_list" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            {% for table_column in table_label_columns %}
                                            <th style="min-width: 5rem">{{ table_column }}</th>
                                            {% endfor %}
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
