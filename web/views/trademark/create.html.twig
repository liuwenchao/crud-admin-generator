{% extends 'ag_base/backend.html.twig' %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'trademark_create'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Main content -->
            <section class="content">

                {% include 'ag_alerts.html.twig' %}

                <div class="row">
                    <div class="col-md-6">

                        {{ form_start(form, {'method': 'POST'}) }}
                            {{ form_errors(form) }}

                            <div class="box box-info">
                                <div class="box-header">
                                    <h3 class="box-title"></h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">

									<div class='form-group'>
									    {{ form_label(form.name) }}
									    {{ form_widget(form.name, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.logo) }}
									    {{ form_widget(form.logo, { attr: { 'class': 'form-control' }}) }}
									    {% if form.vars.value.logo|length > 0 %}
									    <div>
									    	{% for img in form.vars.value.logo|split(',') %}
									    	<a target='__blank' href='/resources/files/{{img}}'>
									    		<img style='width:400px;' class='img-responsive' src='/resources/files/{{img}}'/>
									    	</a>
									    	{% endfor %}
									    </div>
									    {% endif %}
									</div>

									<div class='form-group'>
									    {{ form_label(form.number) }}
									    {{ form_widget(form.number, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.owner) }}
									    {{ form_widget(form.owner, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.category) }}
									    {{ form_widget(form.category, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.apply_date) }}
									    {{ form_widget(form.apply_date, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.publish_date) }}
									    {{ form_widget(form.publish_date, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.register_date) }}
									    {{ form_widget(form.register_date, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.scope) }}
									    {{ form_widget(form.scope, { attr: { 'class': 'form-control textarea', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.status) }}
									    {{ form_widget(form.status, { attr: { 'class': 'form-control' }}) }}
									</div>

                                                  

                                </div><!-- /.box-body -->

                                {{ form_rest(form) }}

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save fa-lg"></i></button>
                                </div>

                            </div><!-- /.box -->
                        {{ form_end(form) }}


                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
